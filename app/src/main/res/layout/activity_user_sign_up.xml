<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSignUp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary">

        <TextView
            android:id="@+id/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:padding="10sp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/regForm"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/firstname"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="@color/bottomText"
            app:met_textColorHint="@color/bottomText"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bottomText"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bottomText"
            />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/lastname"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="@color/bottomText"
            app:met_textColorHint="@color/bottomText"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bottomText"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bottomText"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/phone"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@color/bottomText"
            app:met_textColorHint="@color/bottomText"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bottomText"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bottomText"
            />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/bottomText"
            app:met_textColorHint="@color/bottomText"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bottomText"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bottomText"
            />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/bottomText"
            app:met_textColorHint="@color/bottomText"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bottomText"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bottomText"
            />


        <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginHorizontal="20dp"
        android:text="@string/sign_up"
        android:layout_below="@+id/regForm"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>